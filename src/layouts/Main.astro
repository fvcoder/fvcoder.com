---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import { HeaderNavbar } from "../components/react/headerNavbar";

interface Props {
    title: string
    description?: string
    image?: string
    type?: string
};

const { title, description, image } = Astro.props;
const type = Astro.props.type ?? "website"
---

<html lang="es">
  <head>
    <BaseHead title={title} description={description ?? ""} image={image} type={type} />
  </head>
  <body>
    <HeaderNavbar client:visible />
    <slot />
    <Footer />
  </body>
</html>
