generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model user {
  id        String    @id @default(uuid())
  firstName String?
  lastName  String?
  picture   String
  email     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  detateAt  DateTime?
}

model skills {
  id          String    @id @default(uuid())
  handle      String
  name        String
  icon        String
  color       String
  colorSelect String
  project     project[]
  authority   Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model project {
  id          String   @id @default(uuid())
  handle      String
  name        String
  description String
  thumbnail   String
  body        String
  color       String
  colorSelect String
  skills      skills[]
  authority   Int       @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
