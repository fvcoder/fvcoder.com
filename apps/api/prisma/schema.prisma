generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id                    String   @id @default(uuid())
  name                  String   @default("")
  lastName              String   @default("")
  email                 String
  phone                 String   @default("")
  username              String?  @unique
  ousername             String?  @unique
  discordId             String   @default("")
  active                Boolean  @default(true)
  createAt              DateTime @default(now())
  updateAt              DateTime @updatedAt
  banned                DateTime @default(now())
  deletedAt             DateTime @default(now())
  tokenRecoveryPassword String   @default("")
  tokenChangeEmail      String   @default("")
  tokenChangePhone      String   @default("")
  tokenMagicLink        String   @default("")
  auth                  Auth[]
}

model Auth {
  id         String   @id @default(uuid())
  provider   String   @default("")
  providerId String   @default("")
  user       User     @relation(fields: [userId], references: [id])
  userId     String   @default("")
  metadata   Json     @default("{}")
  raw        Json     @default("{}")
  createAt   DateTime @default(now())
  updateAt   DateTime @updatedAt

  @@index([userId])
}

model Session {
  id           String   @id @default(uuid())
  userId       String   @default("")
  token        String
  refreshToken String
  createAt     DateTime @default(now())
  expireAt     DateTime
}
