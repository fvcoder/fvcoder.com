---
import ArticleLayout from "./../layout/article.astro";
import Render from "./../components/richText/render.astro";
import { getAboutData } from "./../feacture/prismic";
import { asText } from "@prismicio/client"

const raw = await getAboutData();

if (!raw) {
    return new Response(null, { status: 500, statusText: "Ups, algo salioÃÅ mal" });
}
const data = raw.results[0].data;

export const prerender = true;
---
<ArticleLayout
    title={asText(data.title)}
    description={asText(data.description)}
    image={data.image.url as string}
>
    <Render content={data.title} />
    <Render content={data.body} />
</ArticleLayout>